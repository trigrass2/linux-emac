/dts-v1/;

#include "som-3517.dtsi"

/ {
	model = "EMAC SOM-3517M SOM-212ES";

	beeper {
		compatible = "gpio-beeper";
		gpios = <&gpio6 21 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "cs4271 @ SOM3517";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&codec_master>;
		simple-audio-card,frame-master = <&codec_master>;
		simple-audio-card,widgets =
			"Line", "Line In",
			"Line", "Line Out";
		simple-audio-card,routing =
			"Line In", "Capture",
			"Line Out", "Playback";

		cpu_master: simple-audio-card,cpu {
			sound-dai = <&mcbsp2>;
		};

		codec_master: simple-audio-card,codec {
			sound-dai = <&cs4271>;
			clocks = <&clock_gpio>;
		};
	};
};

&mcspi1 {
	spidev@0 {
		compatible = "emac,spidev";
		spi-max-frequency = <48000000>;
		reg = <0>;
	};

	spidev@1 {
		compatible = "emac,spidev";
		spi-max-frequency = <48000000>;
		reg = <1>;
	};

	cs4271: cs4271@2 {
		#sound-dai-cells = <0>;
		compatible = "cirrus,cs4271";
		spi-max-frequency = <1000000>;
		reg = <2>;
		status = "okay";
	};

	spidev@3 {
		compatible = "emac,spidev";
		spi-max-frequency = <48000000>;
		reg = <3>;
	};
};
