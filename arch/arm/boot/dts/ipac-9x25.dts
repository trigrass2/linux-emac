/dts-v1/;
#include "at91sam9x25.dtsi"

/ {
	model = "EMAC IPAC-9X25";
	compatible = "atmel,at91sam9x25ek", "atmel,at91sam9x5ek", "atmel,at91sam9x5", "atmel,at91sam9";

	aliases {
		serial0 = &usart3;
		serial1 = &usart0;
		serial3 = &uart0;
		serial5 = &dbgu;
		spi0 = &spi0;
		spi1 = &spi1;
	};

	memory {
		reg = <0x20000000 0x8000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};

		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};
	};

	ahb {
		apb {
			pinctrl@fffff400 {
				adc0 {
					pinctrl_adc0: adc0-board {
						atmel,pins =
							<AT91_PIOB 11 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOB 12 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOB 13 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOB 14 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOB 15 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOB 16 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOB 17 AT91_PERIPH_A AT91_PINCTRL_NONE>;
					};
				};

				mmc0 {
					pinctrl_board_mmc0: mmc0-board {
						atmel,pins =
							<AT91_PIOC 4 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH>;
					};
				};

				spi0 {
					pinctrl_spi0_cs: spi0-board {
						atmel,pins =
							<AT91_PIOA 7 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOA 14 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				};

				spi1 {
					pinctrl_spi1_cs: spi1-board {
						atmel,pins =
							<AT91_PIOA 30 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOA 31 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				};

				wdt_gpio {
					pinctrl_wdt: wdt-board {
						atmel,pins =
							<AT91_PIOC 6 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOC 7 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				};

				led_gpio {
					pinctrl_led: led-board {
						atmel,pins =
							<AT91_PIOD 20 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>;
					};
				};
			};

			adc0: adc@f804c000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_adc0>;
				status = "okay";
				atmel,adc-channels-used = <0x7f>;
			};

			pwm0: pwm@f8034000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_pwm0_pwm0_1 &pinctrl_pwm0_pwm1_1>;
				compatible = "atmel,at91sam9rl-pwm";
				reg = <0xf8034000 0x400>;
				#pwm-cells = <3>;
				status = "okay";
			};

			ssc0: ssc@f0010000 {
				status = "okay";
			};

			mmc0: mmc@f0008000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&pinctrl_board_mmc0
					&pinctrl_mmc0_slot0_clk_cmd_dat0
					&pinctrl_mmc0_slot0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					/* cd-gpios = <&pioC 4 GPIO_ACTIVE_LOW>; */
				};
			};

			macb0: ethernet@f802c000 {
				phy-mode = "rmii";
				status = "okay";
			};

			macb1: ethernet@f8030000 {
				phy-mode = "rmii";
				status = "okay";
			};

			rtc: rtc@fffffeb0 {
				status = "okay";
			};

			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart0: serial@f801c000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&pinctrl_usart0
					&pinctrl_usart0_rts>;
				status = "okay";
			};

			usart3: serial@f8028000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&pinctrl_usart3
					&pinctrl_usart3_rts
					&pinctrl_usart3_cts>;
				status = "okay";
			};

			uart0: serial@f8040000 {
				status = "okay";
			};

			spi0: spi@f0000000 {
				cs-gpios = <&pioA 14 0
					    &pioA 7 0>;
				pinctrl-name = "default";
				pinctrl-0 = <&pinctrl_spi0 &pinctrl_spi0_cs>;
				status = "okay";

				flash: m25p80@0 {
					compatible = "n25q128a13";
					spi-max-frequency = <10000000>;
					reg = <0>;
					status = "okay";
				};

				mcp23s08: mcp23s08@1 {
					compatible = "mcp,mcp23s08";
					gpio-controller;
					#gpio-cells = <2>;
					mcp,spi-present-mask = <0x07>;
					spi-max-frequency = <1000000>;
					reg = <1>;
					status = "okay";
				};
			};

			spi1: spi@f0004000 {
				cs-gpios = <&pioA 31 0
					    &pioA 30 0>;
				pinctrl-name = "default";
				pinctrl-0 = <&pinctrl_spi1 &pinctrl_spi1_cs>;

				status = "okay";
				spidev0: spidev@0 {
					compatible = "emac,spidev";
					spi-max-frequency = <40000000>;
					reg = <0>;
				};

				spidev1: spidev@1 {
					compatible = "emac,spidev";
					spi-max-frequency = <40000000>;
					reg = <1>;
				};
			};

			can1: can@f8004000 {
				status = "okay";
			};

			usb2: gadget@f803c000 {
				status = "okay";
			};

			i2c1: i2c@f8014000 {
				status = "okay";
			};

			watchdog: watchdog {
				/* MAX6747 */
				compatible = "linux,wdt-gpio";
				gpios = <&pioC 6 GPIO_ACTIVE_LOW>;
				hw_algo = "toggle";
				always-running;
				hw_margin_ms = <1000>;
			};

			reset_controller: rstc@fffffe00 {
				compatible = "atmel,sama5d3-rstc";
				reg = <0xfffffe00 0x10>;
				clocks = <&clk32k>;
			};
		};

		usb0: ohci@00600000 {
			status = "okay";
			num-ports = <3>;
		};

		usb1: ehci@00700000 {
			status = "okay";
		};
	};

	gpio-leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_led>;
		led-stat {
			label = "status";
			gpios = <&pioD 20 1>;
			default-state = "on";
			linux,default-trigger = "none";
		};
	};
};
