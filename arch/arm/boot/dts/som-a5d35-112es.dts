/dts-v1/;
#include "sama5d35.dtsi"
#include <dt-bindings/iio/adi,ad5592r.h>

/ {
	model = "EMAC SOM-A5D35 with SOM-112ES";
	compatible = "emac,soma5d35", "atmel,sama5d3", "atmel,sama5";

	aliases {
		spi0 = &spi0;
	};

	memory {
		reg = <0x20000000 0x20000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};

		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};

		phy_clk: clock@1 {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-output-names = "rmii-ref";
			clock-frequency = <50000000>;
		};

		audio_osc: audio_osc {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_1p8v: regulator-1p8v {
			compatible = "regulator-fixed";
			regulator-name = "1P8V";
			regulator-min-microvolt = <1800000>;
			regulator-max-microvolt = <1800000>;
			regulator-boot-on;
			regulator-always-on;
		};

		reg_3p3v: regulator-3p3v {
			compatible = "regulator-fixed";
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};

		wlan_en_reg: regulator@1 {
			compatible = "regulator-fixed";
			regulator-name = "wlan-en-regulator";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			gpio = <&pioC 15 1>;
			regulator-always-on;
			startup-delay-us = <2000>;
			enable-active-high;
               };
	};

	ahb {
		apb {			
			can1: can@f8010000 {
				status = "okay";
			};

			mmc0: mmc@f0000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc0_clk_cmd_dat0 &pinctrl_mmc0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					non-removable;
				};
			};

			mmc1: mmc@f8000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc1_clk_cmd_dat0 &pinctrl_mmc1_dat1_3>;
				vmmc-supply = <&wlan_en_reg>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
				};
			};

			spi0: spi@f0004000 {
				cs-gpios = <&pioD 14 0>, <&pioD 15 0>, <&pioD 16 0>, <&pioD 13 0>;
				status = "okay";

				spidev0: spidev@0 {
					compatible = "emac,spidev";
					reg = <0>;
					spi-max-frequency = <40000000>;
				};

				spidev1: spidev@1 {
					compatible = "emac,spidev";
					reg = <1>;
					spi-max-frequency = <40000000>;
				};

				spidev2: spidev@2 {
					compatible = "emac,spidev";
					reg = <2>;
					spi-max-frequency = <40000000>;
				};

				m25p80@3 {
					compatible = "n25q128a13";
					spi-max-frequency = <10000000>;
					spi-cpol;
					spi-cpha;
					reg = <3>;
				};
			};

			ssc1: ssc@f800c000 {
				#sound-dai-cells = <0>;
				status = "okay";
			};

			i2c0: i2c@f0014000 {
				status = "disabled";
			};

			usart0: serial@f001c000 {
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			usart1: serial@f0020000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usart1 &pinctrl_usart1_rts_cts>;
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			usart2: serial@f8020000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usart2 &pinctrl_usart2_rts_cts>;
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			usart3: serial@f8024000 {
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			adc0: adc@f8018000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&pinctrl_adc0_ad0
					&pinctrl_adc0_ad1
					&pinctrl_adc0_ad2
					&pinctrl_adc0_ad3
					>;
				atmel,adc-channels-used = <0x0f>;
				status = "okay";
			};

			pwm0: pwm@f002c000 {
				#address-cells = <1>;
				#size-cells = <0>;
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_pwm0_pwml2_1>;
				status = "okay";
			};

			macb1: ethernet@f802c000 {				
				phy-mode = "rmii";
				status = "okay";
				#address-cells = <1>;
				#size-cells = <0>;

				ethphy0: ethernet-phy {
					reg = <0x1>;
					clocks = <&phy_clk>;
					clock-names = "rmii-ref";
					phy-handle = <&ethphy0>;
					osc-gpio = <&pioC 10 0>;
				};
			};

			pinctrl@fffff200 {
				board {
					pinctrl_tcb_as_pwm: tcb_as_pwm {
						atmel,pins =
							<AT91_PIOC 12 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};

					pinctrl_i2c_gpio: i2c_gpio-0 {
						atmel,pins =
							<AT91_PIOA 30 AT91_PERIPH_GPIO AT91_PINCTRL_MULTI_DRIVE
							 AT91_PIOA 31 AT91_PERIPH_GPIO AT91_PINCTRL_MULTI_DRIVE>;
					};
				};
			};

			dbgu: serial@ffffee00 {
				status = "okay";
			};
		};

		usb0: gadget@500000 {
			status = "okay";
		};

		usb1: ohci@600000 {
			num-ports = <3>;
			status = "okay";
		};

		usb2: ehci@700000 {
			status = "okay";
		};
	};

	i2c@1 {
		compatible = "i2c-gpio";
		gpios = <&pioA 30 0 /* sda */
			 &pioA 31 0 /* scl */
			>;
		i2c-gpio,sda-open-drain;
		i2c-gpio,scl-open-drain;
		i2c-gpio,delay-us = <2>;	/* ~100 kHz */
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_i2c_gpio>;
		status = "okay";

		gpio: ad5593r@10 {
			#size-cells = <0>;
			#address-cells = <1>;
			#gpio-cells = <2>;
			compatible = "adi,ad5593r";
			reg = <0x10>;
			gpio-controller;

			channel@0 {
				reg = <0>;
				adi,mode = <CH_MODE_GPIO>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

			channel@1 {
				reg = <1>;
				adi,mode = <CH_MODE_GPIO>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

			channel@2 {
				reg = <2>;
				adi,mode = <CH_MODE_GPIO>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

			channel@3 {
				reg = <3>;
				adi,mode = <CH_MODE_GPIO>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

			channel@4 {
				reg = <4>;
				adi,mode = <CH_MODE_DAC_AND_ADC>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};
	
			channel@5 {
				reg = <5>;
				adi,mode = <CH_MODE_DAC_AND_ADC>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

			channel@6 {
				reg = <6>;
				adi,mode = <CH_MODE_DAC_AND_ADC>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

			channel@7 {
				reg = <7>;
				adi,mode = <CH_MODE_DAC_AND_ADC>;
				adi,off-state = <CH_OFFSTATE_PULLDOWN>;
			};

		};

		codec: sgtl5000@0a {
			#sound-dai-cells = <0>;
			reg = <0x0a>;
			compatible = "fsl,sgtl5000";
			clocks = <&audio_osc>;
			VDDA-supply = <&reg_3p3v>;
			VDDIO-supply = <&reg_3p3v>;
			VDDD-supply = <&reg_1p8v>;
		};
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "sgtl5000 @ SOMA5D35";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&codec_master>;
		simple-audio-card,frame-master = <&codec_master>;
		simple-audio-card,widgets =
			"Line", "Line In",
			"Line", "Line Out";
		simple-audio-card,routing =
			"Line In", "Capture",
			"Line Out", "Playback";

		cpu_master: simple-audio-card,cpu {
			sound-dai = <&ssc1>;
		};

		codec_master: simple-audio-card,codec {
			sound-dai = <&codec>;
		};
	};

	pwmtcb: pwmtcb {
		compatible = "atmel,tcb-pwm";
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_tcb_as_pwm>;
		#pwm-cells = <3>;
		tc-block = <0>;
	};

	leds {
		compatible = "gpio-leds";
		status {
			label = "status";
			gpios = <&pioA 26 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};
};
