/dts-v1/;
#include "at91sam9g20.dtsi"

/ {
	model = "EMAC SOM-9G20M with SOM-150ES";
	compatible = "emac,som9g20", "atmel,at91sam9g20", "atmel,at91sam9";

	aliases {
		serial0 = &dbgu;
		serial1 = &usart0;
		serial4 = &usart1;
		serial3 = &usart3;
		serial6 = &uart0;
		spi0 = &spi0;
		spi1 = &spi1;
	};

	memory {
		reg = <0x20000000 0x4000000>;
	};

	clocks {
		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <18432000>;
		};

		audio_osc: audio_osc {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		vref: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "vref";
			regulator-min-microvolt = <2500000>;
			regulator-max-microvolt = <2500000>;
			regulator-always-on;
		};
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "cs4271 @ SOM9G20";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&codec_master>;
		simple-audio-card,frame-master = <&codec_master>;
		simple-audio-card,widgets =
			"Line", "Line In",
			"Line", "Line Out";
		simple-audio-card,routing =
			"Line In", "Capture",
			"Line Out", "Playback";

		cpu_master: simple-audio-card,cpu {
			sound-dai = <&ssc0>;
		};

		codec_master: simple-audio-card,codec {
			sound-dai = <&cs4271>;
		};
	};

	ahb {
		apb {
			pinctrl@fffff400 {
				mmc0_slot0 {
					pinctrl_board_mmc0_slot0: mmc0_slot0-board {
						atmel,pins =
							<AT91_PIOA 29 AT91_PERIPH_GPIO (AT91_PINCTRL_PULL_UP|AT91_PINCTRL_DEGLITCH)>;	/* PA29 gpio CD pin pull up and deglitch */
					};
				};

				smc04 {
					pinctrl_smc: smc04-board {
						atmel,pins =
							<AT91_PIOC 8 AT91_PERIPH_A AT91_PINCTRL_PULL_UP>;
					};
				};

				spi0 {
					pinctrl_spi0_cs: spi0-board {
						atmel,pins =
							<AT91_PIOA 3 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOA 4 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOA 5 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOC 11 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				};

				spi1 {
					pinctrl_spi1_cs: spi1-board {
						atmel,pins =
							<AT91_PIOB 3 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP
							 AT91_PIOB 30 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP>;
					};
				};

				som {
					pinctrl_som: som-board {
						atmel,pins =
							<AT91_PIOB 0 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOB 1 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOB 2 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOB 3 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOC 12 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOA 28 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOA 22 AT91_PERIPH_GPIO AT91_PINCTRL_NONE
							 AT91_PIOA 31 AT91_PERIPH_GPIO AT91_PINCTRL_NONE>;
					};
				};

				keypad_gpio {
					pinctrl_keypad: keypad-board {
						atmel,pins =
							<AT91_PIOC 15 AT91_PERIPH_GPIO AT91_PINCTRL_DEBOUNCE
							 AT91_PIOA 26 AT91_PERIPH_A AT91_PINCTRL_NONE
							 AT91_PIOC 6 AT91_PERIPH_A AT91_PINCTRL_NONE
                                                         AT91_PIOC 7 AT91_PERIPH_A AT91_PINCTRL_NONE>;
					};
				};
			};

			adc0: adc@fffe0000 {
				atmel,adc-vref = <2500>;
			};

			matrix: matrix@ffffee00 {
				compatible = "atmel,at91sam9260-matrix", "syscon";
				reg = <0xffffee00 0x100>;
			};

			smc: smc@ffffec00 {
				compatible = "atmel,at91sam9260-smc", "syscon";
				reg = <0xffffec00 0x200>;
			};

			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart0: serial@fffb0000 {
				pinctrl-0 =
					<&pinctrl_usart0
					 &pinctrl_usart0_rts
					 &pinctrl_usart0_cts
					 &pinctrl_usart0_dtr_dsr
					 &pinctrl_usart0_dcd
					 &pinctrl_usart0_ri>;
				status = "okay";
			};

			usart1: serial@fffb4000 {
				pinctrl-0 =
					<&pinctrl_usart1
					 &pinctrl_usart1_rts
					 &pinctrl_usart1_cts>;
				status = "okay";
			};

			usart3: serial@fffd0000 {
				status = "okay";
			};

			uart1: serial@fffd8000 {
				status = "okay";
			};

			macb0: ethernet@fffc4000 {
				phy-mode = "rmii";
				status = "okay";
			};

			usb1: gadget@fffa4000 {
				atmel,vbus-gpio = <&pioB 31 GPIO_ACTIVE_HIGH>;
				status = "okay";
			};
			
			ssc0: ssc@fffbc000 {
				#sound-dai-cells = <0>;
				status = "okay";
			};

			mmc0: mmc@fffa8000 {
				pinctrl-0 = <
					&pinctrl_board_mmc0_slot0
					&pinctrl_mmc0_clk
					&pinctrl_mmc0_slot0_cmd_dat0
					&pinctrl_mmc0_slot0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <&pioA 29 GPIO_ACTIVE_LOW>;
				};
			};

			spi0: spi@fffc8000 {
				cs-gpios = <&pioA 3 0
					    &pioA 4 0
					    &pioA 5 0
					    &pioC 11 0>;
				pinctrl-name = "default";
				pinctrl-0 = <&pinctrl_spi0 &pinctrl_spi0_cs>;
				status = "okay";

				mcp3208: mcp320x@0 {
					compatible = "mcp3208";
					spi-max-frequency = <1000000>;
					spi-cpol;
					spi-cpha;
					reg = <0>;
					status = "okay";
				};

				mcp4922: mcp49x2@1 {
					compatible = "mcp4922";
					spi-max-frequency = <1000000>;
					spi-cpol;
					spi-cpha;
					reg = <1>;
					vref = <&vref>;
					status = "okay";
				};

				cs4271: cs4271@2 {
					#sound-dai-cells = <0>;
					compatible = "cirrus,cs4271";
					spi-cpol;
					spi-cpha;
					reg = <2>;
					clocks = <&audio_osc>;
					spi-max-frequency = <1000000>;
					status = "okay";
				};

				flash: mtd_dataflash@3 {
					compatible = "atmel,at45", "atmel,dataflash";
					spi-max-frequency = <13000000>;
					reg = <3>;
				};
			};

			spi1: spi@fffcc000 {
				cs-gpios = <&pioB 3 0>;
				pinctrl-name = "default";
				pinctrl-0 = <&pinctrl_spi1 &pinctrl_spi1_cs>;
				status = "okay";

				spidev0: spidev@0 {
					compatible = "emac,spidev";
					reg = <0>;
					spi-max-frequency = <40000000>;
				};
			};

			shdwc@fffffd10 {
				atmel,wakeup-counter = <10>;
				atmel,wakeup-rtt-timer;
			};

			rtc@fffffd20 {
				atmel,rtt-rtc-time-reg = <&gpbr 0x0>;
				status = "okay";
			};

			watchdog: watchdog {
				/* MAX6747 */
				compatible = "linux,wdt-gpio";
				gpios = <&pioB 20 GPIO_ACTIVE_HIGH>;
				hw_algo = "toggle";
				hw_margin_ms = <1000>;
			};

			gpbr: syscon@fffffd50 {
				status = "okay";
			};
		};

		nand0: nand@40000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "soft";
			nand-on-flash-bbt;
			status = "okay";
		};

		usb0: ohci@500000 {
			num-ports = <2>;
			status = "okay";
		};

		ebi: ebi@10000000 {
			compatible = "atmel,at91sam9260-ebi";
			#address-cells = <2>; 
			#size-cells = <1>;
			atmel,smc = <&smc>;
			atmel,matrix = <&matrix>;
			reg = <0x10000000 0x60000000>;
			ranges = <0x0 0x0 0x10000000 0x10000000
				  0x1 0x0 0x20000000 0x10000000
				  0x2 0x0 0x30000000 0x10000000
				  0x3 0x0 0x40000000 0x10000000
				  0x4 0x0 0x50000000 0x10000000
				  0x5 0x0 0x60000000 0x10000000>;
			clocks = <&mck>;

			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_smc>;

			portc@4,6 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat";
				reg = <4 6 1>;
				gpio-controller;
				no-input;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <1>;
				bank-width = <1>;
			};

			portb@4,4 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat", "dirout";
				reg = <4 4 1>, <4 5 1>;
				gpio-controller;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <2>;
				bank-width = <1>;
			};

			porta@4,2 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat", "dirout";
				reg = <4 2 1>, <4 3 1>;
				gpio-controller;
				#gpio-cells = <2>;
				#address-cells = <1>;
				#size-cells = <1>;
				bank-width = <1>;

				atmel,smc-read-mode = "nrd";
				atmel,smc-write-mode = "nwe";
				atmel,smc-bus-width = <8>;
				atmel,smc-ncs-rd-setup-ns = <8>;
				atmel,smc-ncs-wr-setup-ns = <8>;
				atmel,smc-nwe-setup-ns = <16>;
				atmel,smc-nrd-setup-ns = <16>;
				atmel,smc-ncs-rd-pulse-ns = <40>;
				atmel,smc-ncs-wr-pulse-ns = <40>;
				atmel,smc-nrd-pulse-ns = <24>;
				atmel,smc-nwe-pulse-ns = <24>;
				atmel,smc-nrd-cycle-ns = <64>;
				atmel,smc-nwe-cycle-ns = <64>;
				atmel,smc-tdf-ns = <16>;
			};

			control@4,8 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat";
				reg = <4 8 1>;
				gpio-controller;
				no-input;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <1>;
				bank-width = <1>;
			};

			handy@4,10 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat", "dirout";
				reg = <4 10 1>, <4 11 1>;
				gpio-controller;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <2>;
				bank-width = <1>;
			};

			lcd@4,0 {
				compatible = "emac,lcd";
				reg = <4 0 2>;
				#address-cells = <1>;
				#size-cells = <1>;
				bank-width = <1>;

				atmel,smc-read-mode = "nrd";
				atmel,smc-write-mode = "nwe";
				atmel,smc-bus-width = <8>;
				atmel,smc-ncs-rd-setup-ns = <8>;
				atmel,smc-ncs-wr-setup-ns = <16>;
				atmel,smc-nwe-setup-ns = <27>;
				atmel,smc-nrd-setup-ns = <6>;
				atmel,smc-ncs-rd-pulse-ns = <6>;
				atmel,smc-ncs-wr-pulse-ns = <81>;
				atmel,smc-nrd-pulse-ns = <6>;
				atmel,smc-nwe-pulse-ns = <94>;
				atmel,smc-nrd-cycle-ns = <14>;
				atmel,smc-nwe-cycle-ns = <128>;
				atmel,smc-tdf-ns = <15>;
			};

			keypad@4,7 {
				compatible = "emac,emac-keypad";
				reg = <4 7 1>;
				#address-cells = <1>;
				#size-cells = <1>;
				bank-width = <1>;

				clocks = <&cpld_clk>;
				clock-names = "cpldclk";

				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_keypad>;

				gpio-interrupt = <&pioC 15 0x0>;
				keypad,num-rows = <4>;
				keypad,num-columns = <4>;
				linux,keymap = <0x0000001e /*A*/
						0x01000008 /*7*/
						0x02000005 /*4*/
						0x03000002 /*1*/
						0x0001000b /*0*/
						0x01010009 /*8*/
						0x02010006 /*5*/
						0x03010003 /*2*/
						0x00020030 /*B*/
						0x0102000a /*9*/
						0x02020007 /*6*/
						0x03020004 /*3*/
						0x00030021 /*F*/
						0x01030012 /*E*/
						0x02030020 /*D*/
						0x0303002e /*C*/
						>;
			};

			id@4,0xf {
				compatible = "emac,emac-cpld-id";
				reg = <4 0xf 1>;
				#address-cells = <1>;
				#size-cells = <1>;

				atmel,smc-read-mode = "nrd";
				atmel,smc-write-mode = "nwe";
				atmel,smc-bus-width = <8>;
				atmel,smc-ncs-rd-setup-ns = <8>;
				atmel,smc-ncs-wr-setup-ns = <8>;
				atmel,smc-nwe-setup-ns = <16>;
				atmel,smc-nrd-setup-ns = <16>;
				atmel,smc-ncs-rd-pulse-ns = <40>;
				atmel,smc-ncs-wr-pulse-ns = <40>;
				atmel,smc-nrd-pulse-ns = <24>;
				atmel,smc-nwe-pulse-ns = <24>;
				atmel,smc-nrd-cycle-ns = <64>;
				atmel,smc-nwe-cycle-ns = <64>;
				atmel,smc-tdf-ns = <16>;
			};
		};
	};

	i2c-gpio-0 {
		status = "okay";
	};

	tcb_pwm: tcb_pwm {
		compatible = "atmel,tcb-pwm";
		#pwm-cells = <3>;
		tc-block = <0>;
	};

	cpld_clk: cpld_clk {
		compatible = "pwm-clock";
		#clock-cells = <0>;
		pwms = <&tcb_pwm 3 5000 0>;
	};

	gpio-leds {
		compatible = "gpio-leds";
		led-stat {
			label = "status";
			gpios = <&pioB 20 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};
};
