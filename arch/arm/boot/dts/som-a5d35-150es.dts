/dts-v1/;
#include "sama5d35.dtsi"

/ {
	model = "EMAC SOM-A5D35 with SOM-150ES";
	compatible = "emac,soma5d35", "atmel,sama5d3", "atmel,sama5";

	aliases {
		spi0 = &spi0;
	};

	memory {
		reg = <0x20000000 0x20000000>;
	};

	clocks {
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;

		main_clock: clock@0 {
			compatible = "atmel,osc", "fixed-clock";
			clock-frequency = <12000000>;
		};

		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};

		phy_clk: clock@1 {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-output-names = "rmii-ref";
			clock-frequency = <50000000>;
		};

		audio_osc: audio_osc {
			compatible = "fixed-clock";
			#clock-cells = <0>;
			clock-frequency = <12288000>;
		};
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		vref: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "vref";
			regulator-min-microvolt = <2500000>;
			regulator-max-microvolt = <2500000>;
			regulator-always-on;
		};
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "cs4271 @ SOMA5D35";
		simple-audio-card,format = "i2s";
		simple-audio-card,bitclock-master = <&codec_master>;
		simple-audio-card,frame-master = <&codec_master>;
		simple-audio-card,widgets =
			"Line", "Line In",
			"Line", "Line Out";
		simple-audio-card,routing =
			"Line In", "Capture",
			"Line Out", "Playback";

		cpu_master: simple-audio-card,cpu {
			sound-dai = <&ssc1>;
		};

		codec_master: simple-audio-card,codec {
			sound-dai = <&cs4271>;
		};
	};

	ahb {
		apb {

			can0: can@f000c000 {
				status = "disabled";
			};
			
			can1: can@f8010000 {
				status = "okay";
			};

			mmc0: mmc@f0000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc0_clk_cmd_dat0 &pinctrl_mmc0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					non-removable;
				};
			};

			spi0: spi@f0004000 {
				cs-gpios = <&pioD 13 0>, <&pioD 14 0>, <&pioD 15 0>, <&pioD 16 0>;
				status = "okay";

				m25p80@0 {
					compatible = "n25q128a13";
					spi-max-frequency = <10000000>;
					spi-cpol;
					spi-cpha;
					reg = <0>;
				};

				mcp3208: mcp320x@1 {
					compatible = "mcp3208";
					spi-max-frequency = <1000000>;
					spi-cpol;
					spi-cpha;
					reg = <1>;
					status = "okay";
				};

				mcp4922: mcp49x2@2 {
					compatible = "mcp4922";
					spi-max-frequency = <1000000>;
					spi-cpol;
					spi-cpha;
					reg = <2>;
					vref = <&vref>;
					status = "okay";
				};

				cs4271: cs4271@3 {
					#sound-dai-cells = <0>;
					compatible = "cirrus,cs4271";
					spi-cpol;
					spi-cpha;
					reg = <3>;
					clocks = <&audio_osc>;
					spi-max-frequency = <1000000>;
					status = "okay";
				};
			};

			ssc1: ssc@f800c000 {
				#sound-dai-cells = <0>;
				status = "okay";
			};

			i2c0: i2c@f0014000 {
				status = "disabled";
			};

			usart0: serial@f001c000 {
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			usart1: serial@f0020000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usart1 &pinctrl_usart1_rts_cts>;
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			usart2: serial@f8020000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_usart2 &pinctrl_usart2_rts_cts>;
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			usart3: serial@f8024000 {
				atmel,use-dma-tx;
				atmel,use-dma-rx;
				status = "okay";
			};

			mmc1: mmc@f8000000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_mmc1_clk_cmd_dat0 &pinctrl_mmc1_dat1_3 &pinctrl_mmc1_cd>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <&pioC 13 GPIO_ACTIVE_LOW>;
				};
			};

			adc0: adc@f8018000 {
				pinctrl-names = "default";
				pinctrl-0 = <
					&pinctrl_adc0_ad0
					&pinctrl_adc0_ad1
					&pinctrl_adc0_ad2
					&pinctrl_adc0_ad3
					>;
				atmel,adc-channels-used = <0x0f>;
				status = "okay";
			};

			macb1: ethernet@f802c000 {
				phy-mode = "rmii";
				status = "okay";
				#address-cells = <1>;
				#size-cells = <0>;

				ethphy0: ethernet-phy {
					reg = <0x1>;
					clocks = <&phy_clk>;
					clock-names = "rmii-ref";
					phy-handle = <&ethphy0>;
					osc-gpio = <&pioC 10 0>;
				};
			};

			pinctrl@fffff200 {
				board {
					pinctrl_mmc1_cd: mmc1_cd {
						atmel,pins =
							<AT91_PIOC 13 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH>;
					};

					pinctrl_i2c_gpio: i2c_gpio-0 {
						atmel,pins =
							<AT91_PIOA 30 AT91_PERIPH_GPIO AT91_PINCTRL_MULTI_DRIVE
							 AT91_PIOA 31 AT91_PERIPH_GPIO AT91_PINCTRL_MULTI_DRIVE>;
					};
					pinctrl_keypad: keypad-board {
						atmel,pins =
							<AT91_PIOE 31 AT91_PERIPH_GPIO AT91_PINCTRL_DEBOUNCE
							 AT91_PIOC 12 AT91_PERIPH_B AT91_PINCTRL_NONE
							 AT91_PIOD 6 AT91_PERIPH_B AT91_PINCTRL_NONE>;
					};
				};
			};

			dbgu: serial@ffffee00 {
				status = "okay";
			};

			matrix: matrix@ffffec00 {
				compatible = "atmel,sama5d3-matrix", "syscon";
				reg = <0xffffec00 0x200>;
			};

			smc: smc@ffffc000 {
				compatible = "atmel,sama5d3-smc", "syscon";
				reg = <0xffffc000 0x1000>;
			};
		};

		usb0: gadget@500000 {
			status = "okay";
		};

		usb1: ohci@600000 {
			num-ports = <3>;
			status = "okay";
		};

		usb2: ehci@700000 {
			status = "okay";
		};

		ebi: ebi@10000000 {
			compatible = "atmel,sama5d3-ebi";
			#address-cells = <2>;
			#size-cells = <1>;
			atmel,smc = <&smc>;
			atmel,matrix = <&matrix>;
			reg = <0x10000000 0x10000000
				0x40000000 0x30000000>;
			ranges = <0x0 0x0 0x10000000 0x10000000
				  0x1 0x0 0x40000000 0x10000000
				  0x2 0x0 0x50000000 0x10000000
				  0x3 0x0 0x60000000 0x10000000>;
			clocks = <&hsmc_clk>;

			portc@3,6 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat";
				reg = <3 6 1>;
				gpio-controller;
				no-input;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <1>;
				bank-width = <1>;
			};

			portb@3,4 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat", "dirout";
				reg = <3 4 1>, <3 5 1>;
				gpio-controller;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <2>;
				bank-width = <1>;
			};

			porta@3,2 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat", "dirout";
				reg = <3 2 1>, <3 3 1>;
				gpio-controller;
				#gpio-cells = <2>;
				#address-cells = <1>;
				#size-cells = <1>;
				bank-width = <1>;

				atmel,smc-read-mode = "nrd";
				atmel,smc-write-mode = "nwe";
				atmel,smc-bus-width = <8>;
				atmel,smc-ncs-rd-setup-ns = <8>;
				atmel,smc-ncs-wr-setup-ns = <8>;
				atmel,smc-nwe-setup-ns = <16>;
				atmel,smc-nrd-setup-ns = <16>;
				atmel,smc-ncs-rd-pulse-ns = <40>;
				atmel,smc-ncs-wr-pulse-ns = <40>;
				atmel,smc-nrd-pulse-ns = <24>;
				atmel,smc-nwe-pulse-ns = <24>;
				atmel,smc-nrd-cycle-ns = <64>;
				atmel,smc-nwe-cycle-ns = <64>;
				atmel,smc-tdf-ns = <16>;
			};

			control@3,8 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat";
				reg = <3 8 1>;
				gpio-controller;
				no-input;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <1>;
				bank-width = <1>;
			};

			handy@3,10 {
				compatible = "emac,mmio-gpio";
				reg-names = "dat", "dirout";
				reg = <3 10 1>, <3 11 1>;
				gpio-controller;
				#address-cells = <1>;
				#size-cells = <1>;
				#gpio-cells = <2>;
				bank-width = <1>;
			};


			lcd@3,0 {
				compatible = "emac,lcd";
				reg = <3 0 2>;
				#address-cells = <1>;
				#size-cells = <1>;
				bank-width = <1>;

				atmel,smc-read-mode = "nrd";
				atmel,smc-write-mode = "nwe";
				atmel,smc-bus-width = <8>;
				atmel,smc-ncs-rd-setup-ns = <8>;
				atmel,smc-ncs-wr-setup-ns = <16>;
				atmel,smc-nwe-setup-ns = <27>;
				atmel,smc-nrd-setup-ns = <6>;
				atmel,smc-ncs-rd-pulse-ns = <6>;
				atmel,smc-ncs-wr-pulse-ns = <81>;
				atmel,smc-nrd-pulse-ns = <6>;
				atmel,smc-nwe-pulse-ns = <94>;
				atmel,smc-nrd-cycle-ns = <14>;
				atmel,smc-nwe-cycle-ns = <128>;
				atmel,smc-tdf-ns = <15>;
			};

			keypad@3,7 {
				compatible = "emac,emac-keypad";
				reg = <3 7 1>;
				#address-cells = <1>;
				#size-cells = <1>;
				bank-width = <1>;

				clocks = <&cpld_clk>;
				clock-names = "cpldclk";

				pinctrl-names = "default";
				pinctrl-0 = <&pinctrl_keypad>;

				gpio-interrupt = <&pioE 31 0x0>;
				keypad,num-rows = <4>;
				keypad,num-columns = <4>;
				linux,keymap = <0x0000001e /*A*/
						0x01000008 /*7*/
						0x02000005 /*4*/
						0x03000002 /*1*/
						0x0001000b /*0*/
						0x01010009 /*8*/
						0x02010006 /*5*/
						0x03010003 /*2*/
						0x00020030 /*B*/
						0x0102000a /*9*/
						0x02020007 /*6*/
						0x03020004 /*3*/
						0x00030021 /*F*/
						0x01030012 /*E*/
						0x02030020 /*D*/
						0x0303002e /*C*/
						>;
			};

			id@3,0xf {
				compatible = "emac,emac-cpld-id";
				reg = <3 0xf 1>;
				#address-cells = <1>;
				#size-cells = <1>;

				atmel,smc-read-mode = "nrd";
				atmel,smc-write-mode = "nwe";
				atmel,smc-bus-width = <8>;
				atmel,smc-ncs-rd-setup-ns = <8>;
				atmel,smc-ncs-wr-setup-ns = <8>;
				atmel,smc-nwe-setup-ns = <16>;
				atmel,smc-nrd-setup-ns = <16>;
				atmel,smc-ncs-rd-pulse-ns = <40>;
				atmel,smc-ncs-wr-pulse-ns = <40>;
				atmel,smc-nrd-pulse-ns = <24>;
				atmel,smc-nwe-pulse-ns = <24>;
				atmel,smc-nrd-cycle-ns = <64>;
				atmel,smc-nwe-cycle-ns = <64>;
				atmel,smc-tdf-ns = <16>;
			};
		};
	};

	i2c@1 {
		compatible = "i2c-gpio";
		gpios = <&pioA 30 0 /* sda */
			 &pioA 31 0 /* scl */
			>;
		i2c-gpio,sda-open-drain;
		i2c-gpio,scl-open-drain;
		i2c-gpio,delay-us = <2>;	/* ~100 kHz */
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&pinctrl_i2c_gpio>;
		status = "okay";
	};

	tcb_pwm: tcb_pwm {
		compatible = "atmel,tcb-pwm";
		#pwm-cells = <3>;
		tc-block = <0>;
	};

	cpld_clk: cpld_clk {
		compatible = "pwm-clock";
		#clock-cells = <0>;
		pwms = <&tcb_pwm 1 5000 0>; /* ~200 kHz */
	};

	leds {
		compatible = "gpio-leds";
		status {
			label = "status";
			gpios = <&pioA 26 GPIO_ACTIVE_HIGH>;
			default-state = "on";
		};
	};
};
